<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.mapper.BoardMapper">
	<!-- 검색 조건을 나타내는 쿼리 조각 -->
	<sql id="search">
		<if test="searchType != null">
			<if test="searchType == 't'.toString()">
				and title like concat('%', concat(#{keyword}, '%'))
			</if>
			<if test="serachType == 'c'.toString()">
				and content like concat('%', concat(#{keyword}, '%'))
			</if>
			<if test="serachType == 'w'.toString()">
				and writer like concat('%', concat(#{keyword}, '%'))
			</if>
			<if test="serachType == 'tc'.toString()">
				and (title like concat('%', concat(#{keyword}, '%'))
				or
				content like concat('%', concat(#{keyword}, '%'))
			</if>
			<if test="serachType == 'cw'.toString()">
				and (content like concat('%', concat(#{keyword}, '%'))
				or
				writer like concat('%', concat(#{keyword}, '%'))
			</if>
			<if test="serachType == 'tcw'.toString()">
				and (title like concat('%', concat(#{keyword}, '%'))
				or
				content like concat('%', concat(#{keyword}, '%'))
				or writer like
				concat('%', concat(#{keyword}, '%')))
			</if>
		</if>
	</sql>
	<sql id="total_list">
		<if test="searchType == null">
			and rnum between #{sizePerPage}*#{page}-9 and
			#{sizePerPage}*#{page}
		</if>
	</sql>
	<!-- 게시글 등록 처리 -->
	<insert id="create">
		insert into board
		(
		board_no,
		title,
		content,
		writer
		)
		values
		(
		board_seq.nextval,
		#{title},
		#{content},
		#{writer}
		)
	</insert>
	<!-- 게시글 목록 페이지 삭제 -->
	<!-- <select id="list" resultType="Board"> <![CDATA[ select board_no, title, 
		content, writer, reg_date from board where board_no > 0 order by board_no 
		desc, reg_date desc ]]> </select> -->

	<!-- 페이징 요청 정보를 매개 변수로 받아 페이징 처리를 한 게시글 목록을 조회 -->
	<!-- 검색 조건을 추가한다. -->
	<select id="list" resultType="Board">
		<![CDATA[
			select board_no,
			title,
			content,
			writer,
			reg_date
			from (select board_no,
			title,
			content,
			writer,
			reg_date,
			rownum as rnum
			from board)
			where board_no > 0
		]]>

		<include refid="total_list"></include>
		<include refid="search"></include>
		
		<![CDATA[
			order by board_no desc,
			reg_date desc
		]]>
	</select>

	<!-- 게시글 상세 조회 -->
	<select id="read" resultType="Board">
		select board_no,
		title,
		content,
		writer,
		reg_date
		from board
		where board_no = #{boardNo}
	</select>
	<!-- 게시글 수정 처리 -->
	<update id="update">
		update board
		set title =#{title},
		content=#{content}
		where board_no = #{boardNo}
	</update>

	<!-- 게시글 삭제 처리 -->
	<delete id="delete">
		delete from board
		where board_no = #{boardNo}
	</delete>

	<!-- 게시글 전체 건수를 조회한다. -->
	<!-- 검색 조건을 추가한다. -->
	<select id="count" resultType="int">
		<![CDATA[
			select count(board_no)
			from board
			where board_no > 0
		]]>
		<include refid="search"></include>
	</select>
</mapper>