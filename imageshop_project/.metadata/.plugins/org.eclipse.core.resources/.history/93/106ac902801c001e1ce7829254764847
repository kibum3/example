<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.mapper.BoardMapper">

	<!-- 게시글 등록 처리 -->
	<insert id="create">
		insert into board
		(
		board_no,
		title,
		content,
		writer
		)
		values
		(
		board_seq.nextval,
		#{title},
		#{content},
		#{writer}
		)
	</insert>
	<!-- 게시글 목록 페이지 -->
	<select id="list" resultType="Board">
	<![CDATA[
		select board_no,
		title,
		content,
		writer,
		reg_date
		from board
		where board_no > 0
		order by board_no desc,
		reg_date desc 
	]]>
	</select>
	<!-- 게시글 상세 조회 -->
	<select id="read" resultType="Board">
		select board_no,
		title,
		content,
		writer,
		reg_date
		from board
		where board_no = #{boardNo}
	</select>
	<!-- 게시글 수정 처리 -->
	<update id="update">
		update board
		set title =#{title},
		content=#{content}
		where board_no = #{boardNo}
	</update>
</mapper>